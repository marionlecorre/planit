<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Plan It{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/selectize.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.min.css') }}">
            <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css" />
            <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
            {% stylesheets 
            '@PlanItUserBundle/Resources/public/css/*.scss'
            filter="compass" %}
                  <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %} 
            {% block header %}
                <header>
                    <div class="user">
                        <img src="/images/{{ user.image }}" />
                        <span class="name">{{user.name}} {{user.surname}}</span> 
                    </div>
                </header>
            {% endblock %}

            {% block sidebar %}
                <div id="sidebar">
                    <a href="{{ path('PlanItUserBundle_homepage', { 'id': user.id }) }}"><div id="logo">PLAN <span class="blue">IT</span></div></a>
                   <!--  <div id="search">
                        <form>
                          <input name="search" type="search" class="search" placeholder="Rechercher">
                          <input type="submit" value="Find" class="go">
                        </form>
                    </div> -->
                    <div class="user">
                        <img  src="/images/{{ user.image }}"/>
                        <span class="name">{{user.name}} {{ user.surname }}</span> 
                        <span class="counter-event">{{'nb_events'|trans({'%nb%': user.events|length}) }}</span>
                    </div>
                    {% block navigation %}
                        <ul id="menu">
                            <li class="events"><a href="{{ path('PlanItUserBundle_homepage', { 'id': user.id }) }}">{{'events'|trans}}</a></li>
                            <ul class="events" id="accordion">
                                {% for event in user.events %}
                                    <li class="active event">{{event.name |truncate(20)}}</li>
                                    <ul class="modules">
                                        <li><a href="{{ path('PlanItEventBundle_event', { 'id': event.id }) }}">{{'general'|trans}}</a></li>
                                        {% for module in event.modules %}
                                            <li><a href="{{ path('PlanItModuleBundle_module', { 'event_id': event.id, 'module_id':module.id }) }}">{{module.name|trans}}</a></li>
                                        {% endfor %}
                                    </ul>
                                {% endfor %}
                            </ul>
                            <li class="account"><a href="#">{{'account'|trans}} </a></li>
                            <li class="last help"><a href="#"> {{'help'|trans}} </a></li>
                        </ul>
                    {% endblock %}
                </div>
            {% endblock %}

            {% block content %}
            {% endblock %}

            {% block footer %}
            {% endblock %}

        {% endblock %}
        {% block javascripts %}
            {% javascripts
                '%kernel.root_dir%/../vendor/jms/twig-js/twig.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}

            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
            <script src="//code.highcharts.com/highcharts.js"></script>
            <script src="//code.highcharts.com/modules/exporting.js"></script>
          
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/selectize.js') }}"></script>
            {% javascripts
                '%kernel.root_dir%/Resources/js/*.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}

            <script>accordeon();</script>
        {% endblock %}
    </body>
</html>
