<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Plan It{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body onload="getUser({{user.id}});">
        {% block body %} 
            {% block header %}
                <header>
                    <!--<div class="user">
                        <img src="{{ asset(['images/', user.image]|join) }}" />
                        <span class="name">{{user.name}} {{ user.surname }}</span> 
                    </div>-->
                </header>
            {% endblock %}

            {% block sidebar %}
                <div id="sidebar">
                <div id="logo">PLAN <span class="blue">IT</span></div>
                <div id="search">
                    <form>
                      <input name="search" type="search" class="search" placeholder="Rechercher">
                      <input type="submit" value="Find" class="go">
                    </form>
                </div>
                <div class="user">
                    <img src="{{ asset(['images/', user.image]|join) }}" />
                    <span class="name">{{user.name}} {{ user.surname }}</span> 
                    <span class="counter-event">3 événements cours {# {{ name }} #}</span>
                </div>
                {% block navigation %}
                    <ul id="menu">
                        <li class="events">Evénements</li>
                        <ul class="events">
                            <li class="active">Anniversaire Flor...</li>
                            <ul class="modules">
                                <li><a href="#">Général</a></li>
                                <li><a href="#">Gestion des invités</a></li>
                                <li><a href="#">Gestion du budget</a></li>
                            </ul>
                            <li>Mariage Aurélie</li>
                            <li>Anniversaire papa</li>
                        </ul>
                        <li class="account">Mon compte</li>
                        <li class="last help">Aide</li>
                    </ul>
                {% endblock %}
                </div>
            {% endblock %}

            {% block content %}
            {% endblock %}

            {% block footer %}
            {% endblock %}

        {% endblock %}
        {% block javascripts %}
            {% javascripts
                '%kernel.root_dir%/../vendor/jms/twig-js/twig.js'
                '../app/Resources/js/main.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}

            {% javascripts "../app/Resources/views/templates/header.html.twig"
               filter="twig_js, ?yui_js" %}
                <script language="javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
            <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
            <script src="//code.highcharts.com/highcharts.js"></script>
            <script src="//code.highcharts.com/modules/exporting.js"></script>
          
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
