{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }} <!-- pour ne pas effacer les autres feuilles de style -->
    {% stylesheets 
    '@PlanItTodoBundle/Resources/public/css/*.scss' 
    filter="compass" %}
          <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }} <!-- pour ne pas effacer les autres feuilles de style -->
    {% javascripts '@PlanItTodoBundle/Resources/views/templates/*.html.twig' filter="twig_js, ?yui_js" %}
          <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
    {% javascripts '@PlanItTodoBundle/Resources/public/js/*.js'
                    '%kernel.root_dir%/Resources/js/*.js'  %}
          <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}