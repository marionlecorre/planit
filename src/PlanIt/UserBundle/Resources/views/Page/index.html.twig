{% extends 'PlanItUserBundle::layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }} <!-- pour ne pas effacer les autres feuilles de style -->
    {% stylesheets 
    '@PlanItUserBundle/Resources/public/css/*.scss' 
    filter="compass" %}
	      <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row" id="title">
			<div class="col-md-12" > <h1>EVENEMENTS</h1> </div>
		</div>

		<div class="row" id="separator">
			<div class="col-md-12"> </div>
		</div>
		<div id="events" class="row listing-events">
		<!-- Events template -->
		</div>
		<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
		        <div class="modal-dialog">
		            <div class="modal-content">
		                <div class="modal-header">
		                <h4 class="modal-title" id="myModalLabel">Ajouter un événement</h4>
		                </div>
		                <div class="modal-body">
							{{ render(controller('PlanItEventBundle:Event:form', { 'user_id' : user_id } ))}}
						</div>
		            </div>
		      </div>
		    </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }} <!-- pour ne pas effacer les autres feuilles de style -->
    <script> getEvents({{user_id}}); </script>
{% endblock %}