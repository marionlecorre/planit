{% extends "PlanItUserBundle::layout-login.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h1> Connectez-vous </h1>
<form action="/app_dev.php/api/logins" method="post">

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <input type="text" id="email" placeholder="{{ 'security.login.username'|trans }}" name="email" value="{{ last_username }}" required="required" />

    <input type="password" id="password" placeholder="{{ 'security.login.password'|trans }}" name="password" required="required" />

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
<a href="{{ path('PlanItUserBundle_register') }}" class="text_accueil"> <h2>Pas encore inscrit ? </h2></a>
{% endblock fos_user_content %}