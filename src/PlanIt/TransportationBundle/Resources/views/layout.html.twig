{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }} <!-- pour ne pas effacer les autres feuilles de style -->
    {% stylesheets 
    '@PlanItTransportationBundle/Resources/public/css/*.scss' 
    filter="compass" %}
          <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }} <!-- pour ne pas effacer les autres feuilles de style -->
    
    {% javascripts '@PlanItTransportationBundle/Resources/public/js/*.js'
                    '%kernel.root_dir%/Resources/js/*.js'  %}
          <script language="javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="{{ asset('js/autosize.js') }}"></script>
{% endblock %}