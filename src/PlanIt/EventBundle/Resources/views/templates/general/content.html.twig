{% twig_js name="content" %}
<div class="row" id="title">
	<div class="col-md-12" > <h1>{{ evnt.name }} </h1></div>
</div>

<div class="row" id="separator">
	<div class="col-md-12"> </div>
</div>

<div class="row">
	<div class="col-md-3 descr_event">
			<img src="/images/event/events_pictures/{{evnt.image}}" /> 
            <p>{{evnt.description}} </p>
	</div>
	<div class="col-md-5"> 
		<div id="pie_chart"></div>
	</div>
	<div class="col-md-4"> 
		<div class="info_dte">
    		<img src="/images/event/info_dte_zzz.png" /> 
    		<p> NOMBRE DE DODOS </br> <span>5</span> </p>
		</div>
		<div class="info_dte">
    		<img src="/images/event/info_dte_invite.png" /> 
    		<p> NOMBRE D'INSCRITS </br> <span>18</span> </p>
		</div>
		<div class="info_dte info_color">
    		<img src="/images/event/info_dte_budget.png" /> 
    		<p> BALANCE DU BUDGET </br> <span>36</span> </p>
		</div>
	</div>
</div>

<div class="row" id="mes_modules">
	<div class="col-md-12">Mes modules</div>
</div>

<div class="row">
	{% for module in evnt.modules %}
	<a href="/app_dev.php/event/{{evnt.id}}/module/{{module.id}}">
		<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 module" >
			<div id="module_{{module.type}}">
				<img src="/images/event/pictos_modules/picto_{{module.type}}.png" /> 	
				<p>{{module.name}}</p>    	
			</div>	
		</div>
	</a>
	{% endfor %}
	<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 module">	
		<div id="ajout_module"> 
    		<p>+</p> 
		</div>     		
	</div>
</div>