{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }} <!-- pour ne pas effacer les autres feuilles de style -->
    {% stylesheets 
    '@PlanItEventBundle/Resources/public/css/event.scss'
    '@PlanItEventBundle/Resources/public/css/general.scss' 
    filter="compass" %}
	      <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }} <!-- pour ne pas effacer les autres feuilles de style -->
    
    {% javascripts '@PlanItEventBundle/Resources/public/js/*.js'
                    '%kernel.root_dir%/Resources/js/*.js'  %}
	      <script language="javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
    <script src="{{ asset('js/moment.min.js') }}"></script>
{% endblock %}